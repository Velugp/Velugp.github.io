<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Dialog title="Today's Count" id="fragDist">
		<form:SimpleForm editable="true" class="sapUiSizeCompact">
			<form:content>
				<Label text="CASES REPORTED TODAY" design="Bold"></Label>
				<NumericContent id="fragCases" width="100px" formatterValue="true" valueColor="Critical" animateTextChange="true"></NumericContent>
				<Label text="TOTAL NO OF DEATH TODAY" design="Bold"></Label>
				<NumericContent id="fragDea" width="100px" formatterValue="true" valueColor="Error" animateTextChange="true"></NumericContent>
				<Label text="TOTAL RECOVERED CASES TODAY" design="Bold"></Label>
				<NumericContent id="fragRec" width="100px" formatterValue="true" valueColor="Good" animateTextChange="true"></NumericContent>
			</form:content>
		</form:SimpleForm>
		<beginButton>
			<Button text="Close" type="Ghost" press="fragClose"></Button>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>
