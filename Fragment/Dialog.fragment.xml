<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Dialog title="Today's Count" id="fragDist">
		<form:SimpleForm editable="true" class="sapUiSizeCompact">
			<form:content>
				<Label text="CASES REPORTED TODAY" design="Bold"></Label>
				<NumericContent id="fragCases" truncateValueTo="18" formatterValue="true" valueColor="Critical" animateTextChange="true"
				icon="sap-icon://wounds-doc" width="150%"></NumericContent>
				<Label text="TOTAL NO OF DEATH TODAY" design="Bold"></Label>
				<NumericContent id="fragDea" truncateValueTo="10" formatterValue="true" valueColor="Error" animateTextChange="true"
				icon="sap-icon://bed"></NumericContent>
				<Label text="TOTAL RECOVERED CASES TODAY" design="Bold"></Label>
			
				<NumericContent id="fragRec" truncateValueTo="10" formatterValue="true" valueColor="Good" animateTextChange="true" icon="sap-icon://physical-activity"></NumericContent>
			</form:content>
		</form:SimpleForm>
		<beginButton>
			<Button text="Close" type="Ghost" press="fragClose"></Button>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>
